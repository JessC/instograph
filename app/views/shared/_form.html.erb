<%= simple_form_for @post, html: { class: 'form-horizontal', multipart: true } do |pic| %>
    <div class="form-group">
      <%= pic.input :image, accept: 'image/png,image/gif,image/jpeg, image/jpg' %>
    </div>
    <div class="form-group text-center">
      <%= pic.input :caption %>
    </div>
    <div class="form-group text-center">
      <%= pic.button :submit, class: 'btn-success' %>
    </div>
  <% end %>
