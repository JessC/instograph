<h1>PICTURE INDEX PAGE</h1>
<a class="btn btn-default" href="posts/new" role="button">Upload a Picture</a>

<br>

<div class="posts-wrapper row">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post-head">
        <div class="name">
          <%= @user %>
        </div>
      </div>
      <div class="image center-block">
        <%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post) %>
      </div>
      <p class="caption">
        <%= "Caption:" %>
        <%= post.caption %>
      </p>
    </div>
  <% end %>
</div>





